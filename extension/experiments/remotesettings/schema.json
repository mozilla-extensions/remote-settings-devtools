        "async": true,
        "parameters": [
          {
            "name": "enabled",
            "type": "boolean",
            "description": "true to enable, false to disable"
          }
        ]
      },
      {
        "name": "deleteLocal",
        "type": "function",
        "description": "Deletes the local records of the specified collection",
        "async": true,
        "parameters": [
          {
            "name": "collection",
            "type": "string",
            "description": "collection name"
          }
        ]
      },
      {
        "name": "forceSync",
        "type": "function",
